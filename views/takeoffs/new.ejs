<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/form.css">
<link rel="stylesheet" href="/stylesheets/takeoffs/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form action="/portal/takeoffs" method="POST">
    <table>
      <thead>
        <tr>
          <th colspan="2">Job Information</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <label>Date:</label>
            <label><%= new Date().toString().substring(0,16) %></label>
          </td>
          <td>
            <label for="address-input">Address:</label>
            <input type="text" id="address-input "name="address" placeholder="000 Address Street, City, ST 00000" required>
          </td>
        </tr>
        <tr>
          <td>
            <label for="builder-input">Builder:</label>
            <select name="builder" id="builder-input" required>

              <!-- import available builders here -->

            </select>
          </td>
          <td>
            <label for="lockbox-code-input">Lockbox Code:</label>
            <input type="text" id="lockbox-code-input "name="address" placeholder="0000">
          </td>
        </tr>
      </tbody>
    </table>
    <table>
      <thead>
        <tr>
          <th colspan="3">Locks</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>
            <label for="lock-input">Style:</label>
            <select name="lock" id="lock-input" required>

              <!-- import lock options here -->

            </select>
          </td>
          <td>
            <label for="lock-finish-input">Finish:</label>
            <select name="lockFinish" id="lock-finish-input" required>

              <!-- import available lock finishes here -->

            </select>
          </td>
          <td>
            <label for="key-number-input">Key Number:</label>
            <input type="text" id="key-number-input "name="address" placeholder="00000">
          </td>
        </tr>
        <tr>
          <th>
            <label>Type</label>
          </th>
          <th colspan="2">
            <label>Count</label>
          </th>
        </tr>
        <tr>
          <td>
            <label for="handleset-input">Handleset</label>
          </td>
          <td colspan="2">
            <div class="lock-count-input">
              <div class="operator" onclick="document.getElementById('handleset-input').value--">-</div>
              <input id="handleset-input" name="lockCount" type="number" value="0" min="0" required>
              <div class="operator" onclick="document.getElementById('handleset-input').value++">+</div>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <label for="interior-trim-input">Interior Trim</label>
          </td>
