            <div class="lock-count-input">
              <div class="operator" onclick="document.getElementById('entry-input').value--">-</div>
              <input id="entry-input" name="lockCount" type="number" value="0" min="0" required>
              <div class="operator" onclick="document.getElementById('entry-input').value++">+</div>
            </div>
          </td>
        </tr>
        <tr>
          <td>
            <label for="deadbolt-input">Deadbolt</label>
          </td>
          <td colspan="2">
            <div class="lock-count-input">
              <div class="operator" onclick="document.getElementById('deadbolt-input').value--">-</div>
              <input id="deadbolt-input" name="lockCount" type="number" value="0" min="0" required>
              <div class="operator" onclick="document.getElementById('deadbolt-input').value++">+</div>
            </div>
          </td>
        </tr>
        <tr>
